@model MovieCreateVM
@{
    ViewBag.Title = "Create";
}



<form asp-controller="Movies" asp-action="Create" enctype="multipart/form-data">
    <h2>Add movie</h2>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input style="width: 200px;" class="form-control" asp-for="Title" />
        <span style="color:red;" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="About"></label>
        <textarea style="width: 200px;" class="form-control" asp-for="About"></textarea>
        <span style="color:red;" asp-validation-for="About"></span>
    </div>

    <div class="form-group">
        <label asp-for="Length"></label>
        <input style="width: 200px;" class="form-control" asp-for="Length" />
        <span style="color:red;" asp-validation-for="Length"></span>

    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select style="width: 200px;" class="form-control" id="Genre" name="Genre">
            <option value=""> - Please select a genre - </option>
            <option value="Action"> Action </option>
            <option value="Comedy"> Comedy </option>
            <option value="Drama"> Drama</option>
        </select>
        <span style="color:red;" asp-validation-for="Genre"></span>

    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" />
        <span style="color:red;" asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trailer"></label><span data-toggle="popover" title="Go to an embeded link on youtube and copy whats inside src='' '' and paste inside the box." class="glyphicon glyphicon-question-sign"></span>
        <input style="width: 200px;" class="form-control" asp-for="Trailer" />

    </div>
    <input type="submit" class="btn btn-default" value="Add movie" />
</form>

@section scripts
{

    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
    </script>
}